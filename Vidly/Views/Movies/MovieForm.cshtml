@model Vidly.ViewModels.MovieFormViewModel

@{
	ViewBag.Title = Model.Title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save","Movies"))
{
	<div class="form-group">
		@Html.LabelFor(n => n.Movie.Name)
		@Html.TextBoxFor(n=> n.Movie.Name , new { @class="form-control"})
	</div>
	<div class="form-group">
		@Html.LabelFor(n => n.Movie.ReleaseDate)
		@Html.TextBoxFor(n => n.Movie.ReleaseDate, new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Movie.Genre )
		@Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.LabelFor(n => n.Movie.NumberInStock)
		@Html.TextBoxFor(n => n.Movie.NumberInStock, new { @class = "form-control" })
	</div>

	@Html.HiddenFor(i=>i.Movie.Id)
	<button type="submit" class="btn btn-primary">Save</button>
}